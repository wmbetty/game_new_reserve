/* pages/singleGame/singleGame.wxss */
page{background: #fff;padding-bottom: 16rpx;}
.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
.head-cont{
  display: flex;align-items: center;
}
.game-items{color: #111;font-size: 24rpx;margin-left: 56rpx;}
.game-items:first-child{margin-left: 4854rpx;}
.game-logo{
  /* background: #eee; */
  display: block;width: 80rpx;height: 80rpx;border-radius: 16rpx;margin: 24rpx 0 12rpx;
}
/* .article-conts{padding-left: 30rpx;} */
.list-group{padding-left: 30rpx;}
.cont-head{
  display: flex;color: #666;font-size: 28rpx;align-items: center;
  padding: 30rpx 0 20rpx;border-bottom: 1rpx solid #e5e7ed;margin-left: 30rpx;
}
.black-line{
  width: 5rpx;height: 20rpx;background: #666;margin-right: 10rpx;
}
.list-item{
  padding: 30rpx 0;border-bottom: 1rpx solid #e5e7ed;padding-right: 30rpx;
}
.list-item:last-child{border-bottom: 0;}
.list-title{
  color: #111;font-size: 28rpx;margin-bottom: 12rpx;
}
.list-imgs{display: flex;}
.img-cont{
  width: 220rpx;height: 132rpx;position: relative;margin-right: 16rpx;
}
.tip-img{display: block;width: 100%;height: 100%;background: #eee;border-radius: 4rpx;}
.img-total{
  position: absolute;right: 0;bottom: 0;width: 40rpx;height: 24rpx;
  background: rgba(0, 0, 0, 0.75);color: #fff;font-size: 16rpx;border-radius: 4rpx;
  display: flex;align-items: center;justify-content: center;
}
.list-intros{
  display: flex;justify-content: space-between;margin-top: 20rpx;align-items: center;
}
.intros-cont{display: flex;align-items: center;}
.list-date{
  font-size: 24rpx;color: #888;
}
.list-tag{
  min-width: 88rpx;height: 40rpx;border-radius: 10rpx;font-size: 24rpx;

  margin-right: 40rpx;
}
.blue-border{
  border: 1rpx solid #019CFF;color: #019CFF;margin-right: 20rpx;
  display: flex;align-items: center;justify-content: center;
}
.game-intros{
  color: #666;font-size: 24rpx;max-width: 120rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;word-break: break-all;
}
.big-img{
  width: 690rpx;height: 400rpx;background: #eee;border-radius: 4rpx;
}
.game-area{
  width: 100%;overflow-x: hidden;padding: 40rpx 0 0;
  border-top: 1rpx solid #e5e7ed;
}
.game-cont{
  margin-left: 30rpx;border-bottom: 1rpx solid #e5e7ed;padding-bottom: 20rpx;
  display: flex;padding-right: 30rpx;align-items: center;justify-content: space-between;
}
.right-arrow{
  display: block;
  width: 16rpx;height: 28rpx;
}
.gm-infos{
  display: flex;align-items: center;
}
.gm-icon{
  width: 80rpx;height: 90rpx;border-radius: 16rpx;margin-right: 26rpx;
  background: #eee;
}
.gm-name{color: #111;font-size: 32rpx;}
.gm-news{color: #888;font-size: 24rpx;}
.tab-head{
  padding: 36rpx 30rpx 0;
  display: flex;color: #888;font-size: 32rpx;
}
.head-active{color: #111;}
.tab-head-item{width: 128rpx;height: 64rpx;margin-right: 60rpx;position: relative;}
.dark-line{position: absolute;left: 34rpx;bottom: 0;width: 60rpx;height: 6rpx;background: #111;}
.game-logo{
  width: 100rpx;height: 100rpx;margin-right: 20rpx;border-radius: 16rpx;margin-left: 30rpx;
}
.gm-title-cont{
  display: flex;align-items: center;color: #111;font-size: 36rpx;
}
.home-btn{width: 60rpx;height: 32rpx;margin-left: 20rpx;}
.gm-nums{font-size: 28rpx;color: #888;margin-top: 4rpx;}

.publish-btn{
  position: fixed;right: 30rpx;bottom: 150rpx;
  width: 100rpx;height: 100rpx;
}
.publish-btn image{display: block;width: 100%;height: 100%;}
