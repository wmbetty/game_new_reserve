/**index.wxss**/
page{background: #fff;padding-bottom: 20rpx;}
.swiper-container{
  width: 100%;height: 230rpx;
}
.swiper-view{width: 100%;height: 100%;}
.slide-image{display: block;width: 100%;height: 100%;}
.note-container{
  width: 710rpx;height: 120rpx;border-radius: 10rpx;
  margin: 20rpx auto 40rpx;display: flex;align-items: center;
  box-shadow: 1px 2px 6px rgba(0,0,0,0.15);overflow: hidden;
}
.note-icon{
  width: 72rpx;height: 72rpx;margin: 28rpx 20rpx 24rpx 30rpx;
}
.note-cont{
  /* margin-top: 20rpx; */
}
.note-head{
  color: #666;font-size: 28rpx;
}
.note-infos{
  width: 520rpx;height: 36rpx;
}
.note-swiper{width: 100%;height: 100%;}
.swiper-txt{
    font-size: 24rpx;color: #F97956;display: block;height: 100%;
    width: 100%;overflow: hidden;white-space:nowrap;text-overflow:ellipsis;word-break: break-all;
}
.game-intros-cont{
  padding: 0 24rpx 20rpx;
}
.intro-title{display: flex;align-items: center;color: #666;font-size: 28rpx;margin-bottom: 20rpx;}
.black-line{
  width: 6rpx;height: 20rpx;background: #666;margin-right: 10rpx;
}
.game-item{
  width: 710rpx;height: 164rpx;position: relative;
  margin-bottom: 20rpx;
}
.game-item:last-child{margin-bottom: 0;}
.game-img{
  display:block;width: 100%;height: 100%;border-radius: 10rpx;
}
.slogen-view{
  width: 512rpx;height: 64rpx;margin: 16rpx auto 0;
  display: flex;align-items: center;
}
.slogen-line{
  width: 160rpx;height: 2rpx;background: #C7C7CC;
}
.slogen-texts{color: #C7C7CC;margin: 0 16rpx;}
.big-text{font-size: 24rpx;}
.small-text{font-size: 18rpx;}
button::after{border: none;}
.contact-btn{
  background: none;border-radius: 0;padding: 0;
  position: fixed;right: 30rpx;bottom: 50rpx;
  width: 100rpx;height: 100rpx;
}
.contact-btn-img{display: block;width: 100%;height: 100%;}
.activity-cont{padding: 0 20rpx 40rpx;font-size: 28rpx;color: #666}
.activity-head{display: flex;justify-content: space-between;align-items: center;padding-bottom: 20rpx}
.act-head-right{display: flex;align-items: center;}
.act-right-arrow{width: 28rpx;height: 28rpx;margin-left: 10rpx;}
.no-botom{margin-bottom: 0}
.act-img-cont{display: flex;justify-content: space-between;}
.act-img-item{width: 350rpx;height: 200rpx;}
.act-img{display:block;width: 100%;height: 100%;border-radius: 10rpx;background: #eee}
