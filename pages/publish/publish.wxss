/* pages/publish/publish.wxss */
.page-head{
  padding: 22rpx 30rpx 22rpx 40rpx;font-size: 32rpx;color: #888;
  display: flex;align-items: center;justify-content: space-between;
}
.publish-btn{
  display: flex;align-items: center;justify-content: center;
  width: 132rpx;height: 68rpx;border-radius: 34rpx;background: #C7C7CC;color: #fff;
}
.blue-btn{
  background: #18A3FE
}
.article-title{font-size: 36rpx;}
.title-put{
  display: block;padding: 32rpx 10rpx 32rpx 40rpx;color: #111;background: #F3F5FB;
}
.holder-text{color: #666;}
.article-cont{padding: 40rpx;color: #888;font-size: 28rpx;}
.tip-text{color: #888;font-size: 28rpx;}
.text-area{
  display: block;color: #111;font-size: 28rpx;margin-bottom: 20rpx;
  width: 100%;min-height: 100rpx;height: auto;
  /* height: 150rpx; */
}
.add-img-icon{
  display:block;width: 192rpx;height: 72rpx;
}
.article-img{
  display: block;width: 100%;height: 398rpx;
  margin-bottom: 20rpx;
}
.pub-mask{
  position:fixed;left:0;width:100%;background:rgba(245, 246, 248, 0.95);
}
.prev-img{
  display: block;width: 690rpx;height: 388rpx;margin: 180rpx auto 0;
  background: #eee
}
.btns-container{
  position: fixed;left: 30rpx;bottom: 100rpx;
  width: 690rpx;
  background: #eee
}
.img-btns{
  display: flex;align-items: center;justify-content: space-between;
}
.img-op-btn{
  width: 320rpx;height: 92rpx;color: #fff;font-size: 36rpx;border-radius: 50rpx;
  display: flex;align-items: center;justify-content: center;margin-bottom: 60rpx;
}
.red-btn{background: #FA5961}
.blue-btn{background: #18A3FE}
.cancelop-btn{
  width: 100%;height: 92rpx;background: #888;color: #fff;font-size: 36rpx;
  display: flex;align-items: center;justify-content: center;border-radius: 50rpx;
}

.choose-game-mask{
  position: absolute;left: 0;width: 100%;height: 100%;
  background: rgba(245, 246, 248, 0.95);overflow-y: auto;padding-bottom: 30rpx;
}
.mask-head{
  padding: 60rpx 0;color: #111;font-size: 40rpx;text-align: center;
}
.down-arrow{
  display: block;width: 24rpx;height: 16rpx;margin: 20rpx auto 0;
}
.m-game-list{
  width: 690rpx;height: 152rpx;background: #fff;border-radius: 10rpx;
  display: flex;align-items: center;justify-content: space-between;margin: 0 auto 30rpx;
}
.gray-publish-btn{
  width: 46rpx;height: 46rpx;margin-right: 40rpx;
}
.m-game-info{
  display: flex;align-items: center;color: #111;font-size: 32rpx;
}
.m-game-logo{
  width: 100rpx;height: 100rpx;margin-left: 40rpx;margin-right: 20rpx;border-radius: 16rpx;
  background: #eee;
}
.m-game-nums{
  color: #888;font-size: 28rpx;margin-top: 6rpx;
}
.list-hover{background: #f1f1f1;}
.cancel-btn{
  color: #666;font-size: 40rpx;width: 690rpx;height: 112rpx;background: #fff;
  display: flex;align-items: center;justify-content: center;border-radius: 66rpx;
  /* position: fixed;bottom: 80rpx;left: 30rpx; */
  margin: 0 auto;
}
.poster-img{
  display: block;width: 100%;height: auto;border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.poster-btns{
  display: flex;justify-content: space-between;padding: 0 60rpx;
}
.poster-btn{
  width: 280rpx;height: 92rpx;
  display: flex;align-items: center;justify-content: center;
  font-size: 36rpx;color: #fff;border-radius: 50rpx;
}
.orange-btn{
  background: #F97956;
}
button::after{border: none;padding: 0;}
