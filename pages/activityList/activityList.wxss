/* pages/activityList/activityList.wxss */
.tab-head{position: fixed;left: 0;width: 100%;border-bottom: 1rpx solid #E5E7ED;display: flex;z-index: 1000;background: #fff}
.tab-item{width: 50%;color: #C7C7CC;font-size: 32rpx;position: relative;text-align: center;height: 64rpx;padding-top: 20rpx}
.tab-item-active{color: #111}
.black-line{position: absolute;bottom: 0;background: #111;width: 32rpx;height: 6rpx;}
.right-black-line{right: 46%;}
.left-black-line{left: 46%;}
.activity-group{padding: 32rpx 30rpx 0;}
.activity-group-botom{padding-bottom: 30rpx;}
.list-item{width: 690rpx;height: 200rpx;position: relative;margin-bottom: 20rpx;}
.activity-img{display: block;width: 100%;height: 100%;border-radius: 10rpx;background: black}
.img-mask{
  background: rgba(255, 255, 255, 0.4);position: absolute;left: 0;top: 0;
  width: 100%;height: 100%
}
.list-tag{position: absolute;top:0;right: 0;width: 110rpx;height: 110rpx;}
