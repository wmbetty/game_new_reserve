page{background: #260846;}
.prize-bg{
  width: 100%;height: auto;position: absolute;left: 0;top: 0;z-index: 1
}
.page-view{background: #260846;}
.page-cont{position: absolute;left: 0;top:0;width: 100%;height: 100%;z-index: 2;}
.chance-cont{
  display: flex;align-items: center;
  width: 516rpx;
  color: #fff;font-size: 36rpx;
  /* position:fixed;top:298rpx;left:50%;margin-left:-258rpx; */
  margin: 298rpx auto 30rpx;
}
.chance-nums{font-size: 52rpx;color: #FA5961;margin: 0 10rpx;}
.refresh-icon{width: 40rpx;height: 40rpx;margin-left: 54rpx}
.plate-cont{width: 680rpx;height: 680rpx;margin: 0 auto 100rpx;position: relative;overflow: hidden;}
.plate-img{display: block;width: 100%;height: 100%}
.pointer-btn{position: absolute;width: 240rpx;height: 240rpx;left:220rpx;top:220rpx;background: none}
.pointer-btn-img{display: block;width: 100%;height: 100%}
.task-group{background: rgba(255, 255, 255, 0.16);width: 710rpx;height: auto;
  margin: 0 auto 40rpx;border-radius: 10rpx;overflow-x: hidden;
}
.task-list{
  padding: 30rpx 0 20rpx;position: relative;
  /* border-bottom: 1rpx solid #C7C7CC; */
  display: flex;align-items: center;justify-content: space-between;margin: 0 30rpx 0 20rpx
}
.task-list:last-child{border: none}
.task-btn{width: 112rpx;height: 60rpx;display: flex;align-items: center;justify-content: center;
  color: #fff;font-size: 28rpx;border-radius: 30rpx;background: #C7C7CC}
.task-btn-disabled{background: #C7C7CC}
.red-btn{background: #FA5961}
.blue-btn{background: #18A3FE}
.star-icon{width: 34rpx;height: 34rpx;margin-right: 16rpx;}
.task-list-left{display: flex;align-items: center;color: #fff;font-size: 28rpx;}
.list-line{position: absolute;left: 60rpx;bottom: 0;width: 612rpx;height: 2rpx;border-top: 1rpx solid rgba(102, 102, 102, 0.5)}
.task-rules{
  margin: 0 30rpx 40rpx;color: #888;font-size: 24rpx;border-bottom: 1rpx solid rgba(199, 199, 204, 0.5);overflow-x: hidden;
}
.rule-title{font-size: 32rpx;margin-bottom: 12rpx;}
.rules-list{margin-bottom: 14rpx;}
.rules-list:last-child{margin-bottom: 40rpx;}
.ranks{
  padding: 0 30rpx 20rpx;color: #888;font-size: 24rpx;
}
.rank-title{margin-bottom: 24rpx;font-size: 32rpx;}
.rank-list{display: flex;align-items: center;margin-bottom: 24rpx;}
.rank-list:last-child{margin-bottom: 30rpx}
.user-avatar{width: 40rpx;height: 40rpx;border-radius: 50%;margin-right: 12rpx;border: 1rpx solid #eee}
.prize-text{margin-left: 14rpx;max-width: 300rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.red-font{color: #FA5961}
.black-mask{background: rgba(0,0,0,0.75);position: fixed;left: 0;top:0;width: 100%;z-index: 9999;height: 100%}
.gift-tips-cont{width: 512rpx;height: 476rpx;margin: 190rpx auto 50rpx;position: relative;}
.close-icon{width: 54rpx;height: 54rpx;position: absolute;top:0;right: 102rpx;}
.gift-img-tip{display: block;width: 100%;height: 100%;}
.gift-text-tip{position: absolute;width: 472rpx;height: 136rpx;left: 20rpx;bottom: 110rpx;font-size: 40rpx;color: #fff;text-align: center;}
.gift-name{color: #FFE745;font-size: 52rpx;width: 360rpx;margin: 0 auto;}
.get-prize-cont{font-size: 26rpx;color: #F4F4F4;margin-left: 70rpx;margin-bottom: 80rpx;}
.get-prize-title{font-size: 28rpx;margin-bottom: 14rpx;}
.get-prize-step{margin-bottom: 30rpx;}
.get-prize-btn{
  width: 260rpx;height: 80rpx;margin: 0 auto;border-radius: 40rpx;
  display: flex;align-items: center;justify-content: center;
  color: #fff;font-size: 36rpx;
  background: linear-gradient(to right, #FF996B, #E74C49);
  box-shadow: 1px 10px 10px rgba(250, 89, 97, 0.35);
}
.offical-dialog-cont{
  width: 670rpx;height: auto;margin: 232rpx auto 0;position: relative;overflow-x: hidden;
}
.offical-dialog{width: 100%;height: auto;margin-top: 94rpx;}
.offical-tips-cont{
  color: #F4F4F4;font-size: 32rpx;padding: 60rpx 50rpx 0 50rpx;
}
.offical-tip-title{color: #18A3FE;font-size: 52rpx;margin-bottom: 40rpx;}
.start-btn{
  background: linear-gradient(to right, #2FCCFF, #626FDF);
  box-shadow: 1px 10px 10px rgba(24, 163, 254, 0.3);
  margin-top: 200rpx
}
.pin-my-dialog{height: auto;width: 670rpx;padding: 140rpx 0 0;position: relative;overflow-x: hidden;margin: 0 auto;}
.pin-my-arrow{
  position: absolute;top: -136rpx;right: 104rpx;
  width: 124rpx;height: 124rpx;
  /* float: right;margin-right: 120rpx; */
}
.pin-dialog{margin-top: 146rpx;width: 100%;height: auto;border-radius: 30rpx;position: relative;}
.get-prize-btn-close{margin-top: 200rpx;}
.rank-swiper{width: 100%;height: 44rpx;padding-bottom: 10rpx;margin-bottom: 20rpx;margin-top: 30rpx}
button::after{border: none;}
button{padding: 0}
.pinmy-tip-title{margin-bottom: 60rpx}
.pin-my-tips{display: block;width: 614rpx;height: 918rpx;margin: 150rpx auto 0;}
.know-btn{width: 280rpx;height: 100rpx;border-radius: 50rpx;border: 2rpx dotted #fff;
  color: #fff;font-size: 36rpx;display: flex;align-items: center;justify-content: center;margin: 220rpx auto 0}
.pin-my-dialog-top{padding-top: 180rpx}
.blue-text{color: #18A3FE}
.my-record-cont{border-bottom: 1rpx dotted rgba(199, 199, 204, 0.5)}
.plate-img-rotate{animation: rotate 0.8s linear infinite;}
.rotate-fast{animation: rotate 0.4s linear infinite;}
.rotate-faster{animation: rotate 0.2s linear infinite;}
.rotate-slow{animation: rotate 1.5s linear infinite;}

@keyframes rotate{
  from {
      transform: rotate(0deg);
  }
  to {
      transform: rotate(360deg);
  }
}
.my-name{max-width: 260rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
button[disabled]{background: none}
button[disabled]:not([type]){background: none}
