/* pages/answerQues/answerQues.wxss */
.page-view{
  width: 100%;height: 100%;
  background: url('https://gifres.79643.com/mini_aide/2019/01/16/25ef9817b53188278c73558fec61e5ff.jpg') no-repeat;
  background-size: cover;
  overflow: hidden;
}
.ques-outer-container{
  width: 670rpx;height: 1080rpx;background: rgba(255, 255, 255, 0.84);
  border-radius: 30rpx;margin: 0 auto;text-align: center;overflow: hidden;position: relative;z-index: 1
}
.ques-info-title{color: #18A3FE;font-size: 60rpx;margin: 60rpx 0 4rpx;}
.ques-times-info{color: #FA5961;font-size: 28rpx;margin-bottom: 28rpx;}
.ques-cont{
  padding: 0 44rpx;height: 320rpx;width: 472rpx;border-radius: 32rpx;color: #222;font-size: 52rpx;
  margin: 0 auto 60rpx;position: relative;
}
.answer{
  width: 560rpx;height: 92rpx;border-radius: 50rpx;color: #fff;font-size: 36rpx;
  margin: 0 auto 40rpx;display: flex;align-items: center;justify-content: center;
}
.first-answer{background: #18A3FE}
.second-answer{background: #FA5961}
.break-view{display: flex;align-items: center;padding-top: 20rpx}
.break-view-top{margin-top: 170rpx;}
.break-text{color: #888;font-size: 28rpx;margin: 0 36rpx}
.break-line{width: 240rpx;height: 2rpx;border-top: 1rpx solid #C7C7CC}
.answer-result-cont{padding-top: 20rpx;text-align: center;color: #FA5961;font-size: 40rpx;}
.get-prize-btn{
  display: flex;align-items: center;justify-content: center;width: 260rpx;height: 80rpx;border-radius: 40rpx;box-shadow: 1px 10px 10px rgba(250, 89, 97, 0.3);
  background: linear-gradient(to right, #FF996B, #E74C49);margin: 30rpx auto 0;color: #fff
}
.correct-text{color: #666;font-size: 28rpx;margin-top: 20rpx;margin-bottom: 140rpx}
.ques-scroll-view{width: 100%;height: 66rpx;white-space:nowrap;padding-top: 40rpx;}
.blue-circle{
  width: 60rpx;height: 60rpx;border-radius: 50%;
  display: inline-block;
  margin-right: 50rpx;
}
.blue-circle:first-child{margin-left: 40rpx}
.wrong-tag{width: 40rpx;height: 40rpx;margin: 10rpx auto;}
.correct-tag{width: 28rpx;height: 28rpx;border: 6rpx solid #18A3FE;border-radius: 50%;margin: 10rpx auto;}
.ques-tag-active{background: #18A3FE;box-shadow: 1px 10rpx 10rpx rgba(24, 163, 254, 0.35)}
.ques-cont-bg{position: absolute;left: 0;top: 0;width: 100%;height: 100%}
.ques-view{position: absolute;left: 0;top: 0;width: 100%;height: 100%;
  display: flex;align-items: center;justify-content: center;z-index: 9}
  .ques-text{width: 472rpx;height: 236rpx;display: flex;justify-content: center;align-items: center;}
  .white-circle{border-color: #fff}
.record-cont{position:absolute;left:0;bottom:60rpx;width:100%;}
.ques-outer-container::before {
	content: '';
	position: absolute;
	top: 0;left: 0;
	filter: blur(20px);
  width: 100%;height: 100%;background: rgba(255, 255, 255, 0.5);z-index: -1
}
.record-img{
  width: 60rpx;height: 60rpx;
}
